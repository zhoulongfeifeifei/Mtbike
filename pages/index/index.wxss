.Cycling{
  width: 100%;
  height: 170rpx;
  position: fixed;  
  background: #fff;
   /* left: 0;
  top: 0;  */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.cycText{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.num{
  color: #222327;
  font-size: 24rpx;
  margin-bottom: 22rpx;
}
.cycTitle{
  color: #989898;
  font-size: 22rpx;
}
.main{
  width: 100%;
  height: 100%;
   position: absolute;
   left: 0;
   top: 0;
   overflow: hidden
}
#myMap{
  width: 100%;
   height: 100%;    
  /* height: 30%; */
   position: relative; 
   left: 0;
   top: 0;     
}
.hide{
  display: none;
}
.show{
  display: block;
}